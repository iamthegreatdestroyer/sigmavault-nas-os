# SigmaVault NAS OS - API Server Environment Configuration
# Copy this file to .env and modify as needed

# Environment: development, staging, production
ENVIRONMENT=development

# Server Configuration
PORT=8080
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# Python RPC Engine Connection
RPC_ENGINE_HOST=127.0.0.1
RPC_ENGINE_PORT=50051
RPC_ENGINE_TIMEOUT=30s

# WebSocket Configuration
WS_ENABLED=true
WS_PING_INTERVAL=30s
WS_PONG_TIMEOUT=60s

# Static File Serving (for production deployment)
SERVE_STATIC=false
STATIC_PATH=./static

# Logging
LOG_LEVEL=debug
LOG_FORMAT=console

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Database (future use)
# DB_TYPE=sqlite
# DB_PATH=/var/lib/sigmavault/sigmavault.db

# ZFS Configuration (used by RPC engine)
ZFS_POOL_PREFIX=sigmavault
ZFS_DEFAULT_QUOTA=100G

# AI Agent Configuration
AGENT_SWARM_SIZE=40
AGENT_MEMORY_BACKEND=redis
AGENT_MEMORY_HOST=127.0.0.1
AGENT_MEMORY_PORT=6379

# Compression Engine
COMPRESSION_TARGET_RATIO=0.90
COMPRESSION_THREADS=4
COMPRESSION_ML_MODEL_PATH=/var/lib/sigmavault/models

# Encryption Configuration
ENCRYPTION_ALGORITHM=AES-256-GCM
ENCRYPTION_KEY_DERIVATION=argon2id
QUANTUM_RESISTANT_ENABLED=true

# PhantomMesh VPN
VPN_ENABLED=false
VPN_LISTEN_PORT=51820
VPN_INTERFACE=wg0
