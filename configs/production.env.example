# =============================================================================
# SigmaVault NAS OS - Production Environment Configuration
# =============================================================================
# Copy this file to /etc/sigmavault/config.env and customize for your deployment
# 
# SECURITY WARNING: Set SIGMAVAULT_JWT_SECRET to a secure random value!
# Generate with: openssl rand -hex 32
# =============================================================================

# -----------------------------------------------------------------------------
# Environment Settings
# -----------------------------------------------------------------------------
# production | development | staging
SIGMAVAULT_ENV=production

# Version (usually set automatically)
SIGMAVAULT_VERSION=1.0.0

# -----------------------------------------------------------------------------
# API Server Settings
# -----------------------------------------------------------------------------
# Port for the API server (default: 12080)
SIGMAVAULT_PORT=12080

# CORS allowed origins (comma-separated)
# Example: http://192.168.1.100:12080,https://nas.example.com
SIGMAVAULT_CORS_ORIGINS=http://localhost:12080

# -----------------------------------------------------------------------------
# Authentication Settings (@CIPHER Security)
# -----------------------------------------------------------------------------
# JWT secret key - MUST be at least 32 characters in production!
# Generate with: openssl rand -hex 32
SIGMAVAULT_JWT_SECRET=CHANGE_THIS_TO_A_SECURE_64_CHARACTER_RANDOM_STRING

# JWT token expiry (default: 15m)
SIGMAVAULT_JWT_EXPIRY=15m

# JWT refresh token expiry (default: 168h = 7 days)
SIGMAVAULT_JWT_REFRESH_EXPIRY=168h

# -----------------------------------------------------------------------------
# Python AI Engine (RPC) Settings
# -----------------------------------------------------------------------------
# RPC engine URL (internal communication)
SIGMAVAULT_RPC_URL=http://localhost:8001/api/v1

# RPC timeout (default: 30s)
SIGMAVAULT_RPC_TIMEOUT=30s

# -----------------------------------------------------------------------------
# Storage Settings
# -----------------------------------------------------------------------------
# Data directory for SigmaVault storage
SIGMAVAULT_DATA_DIR=/var/lib/sigmavault

# -----------------------------------------------------------------------------
# WebSocket Settings
# -----------------------------------------------------------------------------
# WebSocket ping interval (default: 30s)
SIGMAVAULT_WS_PING_INTERVAL=30s

# WebSocket pong timeout (default: 10s)
SIGMAVAULT_WS_PONG_TIMEOUT=10s

# -----------------------------------------------------------------------------
# Static File Serving (for embedded WebUI)
# -----------------------------------------------------------------------------
# Enable static file serving (default: false in dev, true in production)
SIGMAVAULT_SERVE_STATIC=true

# Path to static files (WebUI build output)
SIGMAVAULT_STATIC_PATH=/var/lib/sigmavault/webui

# -----------------------------------------------------------------------------
# Python Engine Settings
# -----------------------------------------------------------------------------
# gRPC server port
SIGMAVAULT_GRPC_PORT=9003

# HTTP API port for Python engine
SIGMAVAULT_ENGINE_PORT=8001

# Worker pool size for compression jobs
SIGMAVAULT_WORKER_POOL_SIZE=4

# Maximum queue size for compression jobs
SIGMAVAULT_MAX_QUEUE_SIZE=1000

# -----------------------------------------------------------------------------
# AI Agent Settings
# -----------------------------------------------------------------------------
# Enable Elite Agent Collective
SIGMAVAULT_AGENTS_ENABLED=true

# Agent tier configuration (core, specialist, support)
SIGMAVAULT_AGENT_TIER_CORE=5
SIGMAVAULT_AGENT_TIER_SPECIALIST=15
SIGMAVAULT_AGENT_TIER_SUPPORT=20

# -----------------------------------------------------------------------------
# Logging Settings
# -----------------------------------------------------------------------------
# Log level: debug, info, warn, error
SIGMAVAULT_LOG_LEVEL=info

# Log format: json, console
SIGMAVAULT_LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Performance Tuning
# -----------------------------------------------------------------------------
# Rate limit (requests per minute, default: 100)
SIGMAVAULT_RATE_LIMIT=100

# Strict rate limit for sensitive endpoints (default: 10)
SIGMAVAULT_STRICT_RATE_LIMIT=10

# Connection pool size
SIGMAVAULT_POOL_SIZE=100

# Read timeout
SIGMAVAULT_READ_TIMEOUT=30s

# Write timeout
SIGMAVAULT_WRITE_TIMEOUT=30s

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
